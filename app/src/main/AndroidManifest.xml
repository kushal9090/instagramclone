<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kushal.instagram">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_instalogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_instalogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegiActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".homescreens.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".postadd.PostAddActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".about.AboutActivity" />
        <activity
            android:name=".about.FollowingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mesagescreen.MessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".commentscreen.CommentScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".homescreens.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".mesagescreen.MessageScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".about.EditProfileActivity" />
        <activity android:name=".postadd.PhoneVerification" />
        <activity android:name=".requests.RequestActivity" />
        <activity android:name=".TestActivity"></activity>
    </application>

</manifest>