<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

 <android.support.v7.widget.CardView
     android:id="@+id/cardpost"
     android:layout_width="match_parent"
     android:layout_height="450dp"
     android:foregroundGravity="center"
     android:layout_marginTop="21dp"
     android:layout_alignParentTop="true"
     android:layout_centerHorizontal="true">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">


         <TextView
             android:id="@+id/nametv"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:layout_marginLeft="3dp"
             android:layout_marginStart="3dp"
             android:layout_marginTop="19dp"
             android:layout_toRightOf="@+id/profile_image"
             android:text="name"
             android:textColor="@android:color/black"
             android:textSize="20sp"
             android:textStyle="bold" />

         <ImageView
             android:id="@+id/imagepost"
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:layout_below="@+id/nametv"
             android:layout_centerHorizontal="true"
             android:layout_marginBottom="20dp"
             android:layout_marginTop="20dp"
             android:foregroundGravity="center" />


         <TextView
             android:id="@+id/postTitle"

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_marginBottom="13dp"
             android:layout_marginLeft="15dp"
             android:layout_marginStart="15dp"
             android:text="PostTitle"
             android:textColor="@android:color/black"
             android:textSize="15sp"
             android:textStyle="bold" />

         <ImageView
             android:id="@+id/likeheart"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_above="@+id/postTitle"
             android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"
             android:layout_below="@+id/imagepost"
             android:layout_marginBottom="12dp"
             app:srcCompat="@drawable/ic_icon_heart" />

         <ImageView
             android:id="@+id/commentIV"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_below="@+id/imagepost"
             app:srcCompat="@drawable/ic_mode_comment_black_48dp"
              android:layout_marginLeft="50dp"

             />

         <de.hdodenhof.circleimageview.CircleImageView
             android:id="@+id/profile_image"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/instausericon"
             app:civ_border_color="#FF000000"
             app:civ_border_width="2dp" />

         <ImageView
             android:id="@+id/share"
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_below="@+id/imagepost"

             android:layout_marginLeft="80dp"

             app:srcCompat="@android:drawable/ic_menu_send" />

         <TextView
             android:id="@+id/viewComment"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/postTitle"
             android:layout_alignParentBottom="true"
             android:layout_alignStart="@+id/postTitle"
             android:text="view all comments" />
     </RelativeLayout>

 </android.support.v7.widget.CardView>


</RelativeLayout>