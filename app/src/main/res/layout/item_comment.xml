<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image_comment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/instausericon"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/commentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_comment"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/profile_image_comment"
        android:layout_toRightOf="@+id/profile_image_comment"
        android:text="comment..."
        android:textSize="14sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image_comment"
        android:layout_toEndOf="@+id/profile_image_comment"
        android:layout_toRightOf="@+id/profile_image_comment"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="10dp"
        android:text="name" />


</RelativeLayout>